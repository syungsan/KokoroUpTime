                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Border x:Name="TitleBorder" Background="#FF4472C4">
                    <Grid>
                        <outline_marker:OutlineText x:Name="WhyIsAkamaruNotGoodAtdogsSceneTitle" Style="{StaticResource Orange}" Text="赤丸くんはどうして犬が苦手なんだろう？" FontSize="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
