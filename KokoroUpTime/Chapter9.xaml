                        <Run Text="&#10;最初はとてもこわかったんだけど、いっしょにいてもかまれないことが、少しずつわかってきたんだ。"/>
                        <Run Text="&#10;そうすると、こわいきもちもましになってきたんだよ。"/>
                    </TextBlock>
                </Border>
                <Button x:Name="AkamaruKindOfFeeling" Style="{StaticResource KindOfFeelingButton}" BorderBrush="#FF0070C0" BorderThickness="3" Content="こわい" FontSize="70" FontFamily="MS PGothic" FontWeight="Bold" Height="150" Width="300" Margin="500,50" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
