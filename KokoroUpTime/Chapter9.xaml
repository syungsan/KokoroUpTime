                    <Grid x:Name="ItemReviewPlate" Margin="700,300,480,550">
                        <Image x:Name="ItemReviewPlateImage" Source="/Images/item_review.png"  Stretch="Fill"/>
                        <TextBlock x:Name="ItemReviewText1" Margin="15,15,15,130" Text="#8  「おじゃま虫バスター」" FontSize="60"/>
                        <TextBlock x:Name="ItemReviewText2" Margin="15,110,15,15" Text="おじゃま虫をたいじできます。" TextWrapping="Wrap" FontSize="60"/>
                    </Grid>
                    <Grid x:Name="ItemReviewBubble" Margin="700,550,190,50">
                        <Image x:Name="Item" Source="/Images/item_check_back_bubble.png"  Stretch="Fill"/>
                        <TextBlock x:Name="Text" FontSize="45" TextWrapping="Wrap"  FontFamily="Yu Gothic"  FontWeight="UltraBold"  Margin="40,30,40,12" LineHeight="50">
                            <Run Text="おじゃま虫バスターの使い方は…"/>
                            <Run Text="&#10;➢「おじゃま虫」を発見する"/>
                            <Run Text="&#10;➢「おじゃま虫」を"/>
                            <Run Text="た・い・じ" Foreground="Red"/>
                            <Run Text="する" />
                            <Run Text="&#10;　　た" Foreground="Red"/>
                            <Run Text="しかめてみよう"/>
                            <Run Text="&#10;　　い" Foreground="Red"/>
                             <Run Text="い気持ちになる考えは？"/>
                            <Run Text="&#10;　　じ" Foreground="Red"/>
                             <Run Text="ぶんいがいの人なら"/>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
            <Grid x:Name="SessionGrid" d:IsHidden="True">
                <Image x:Name="SessionTitleImage" Source="/Images/challenge_time.png" Margin="226,75,906,917"/>
                <Grid x:Name="SessionFrameGrid" Width="1010" Height="328" Margin="226,243,684,509">
                    <Image x:Name="SessionFrameImage" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Images/white_frame.png" Stretch="Fill"/>
                    <TextBlock x:Name="SessionSubTitleTextBlock" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="55" FontSize="48" FontWeight="Bold" Margin="44,32,0,0" HorizontalAlignment="Left" Width="745"/>
                    <TextBlock x:Name="SessionSentenceTextBlock" HorizontalAlignment="Left" Margin="89,112,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="168" Width="865" FontSize="48"/>
                    <TextBlock x:Name="SessionStarTextBlock" HorizontalAlignment="Left" Margin="35,109,0,0" VerticalAlignment="Top" FontSize="48" RenderTransformOrigin="0.345,0.474" FontWeight="Bold" Text="☆" TextAlignment="Center"/>
                </Grid>
                <TextBlock x:Name="SessionFrameText" Text="きちんとつたえてみよう"  FontWeight="UltraBold" FontSize="70" Background="Yellow" Width="800" Height="120" Margin="10,10,680,500" Foreground="MediumPurple" FontFamily="Yu Gothic" TextAlignment="Center" />
            </Grid>
            <Grid x:Name="SummaryGrid" d:IsHidden="True">
                <Grid x:Name="SummaryBoardGrid" Margin="496,203,496,305">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image x:Name="SummaryBoardImage" Source="/Images/blackboard.png"/>
                    <TextBlock x:Name="SummarySubTitleTextBlock" Margin="118,42,118,446" Text="今日の教室で学んだこと" TextWrapping="Wrap" Foreground="White" Background="{x:Null}" FontSize="68" FontWeight="Bold" TextAlignment="Center"/>
                    <TextBlock x:Name="SummarySentenceTextBlock" Text="✓自分の苦手場面について考えた。&#10;✓時間がたつといやなきもちはへって&#10;　いくことを知った。"  TextWrapping="Wrap" Foreground="#FFFFE800" FontSize="55" Margin="69,130,66,190"/>
                    <Image x:Name="SummaryItemImage" Source="/Images/item09_solo.png"  Margin="-120,350,500,30" RenderTransformOrigin="0.5,0.5"/>
                    <TextBlock x:Name="SummaryItemText" Margin="250,400,52,75" Foreground="White" FontFamily="MS PGothic" FontWeight="Bold">
                        <Run x:Name="SummaryItemTitle" Text="本日の発明品" FontSize="40" />
                        <Run x:Name="SummaryItemName" Text="&#10;No.9  勇者のマント" FontSize="50"/>
                    </TextBlock>
                </Grid>
                <Image x:Name="SummaryTitleImage" Width="401" Source="/Images/summary_title.png" Margin="760,22,759,907" Height="151"/>
            </Grid>
            <Grid x:Name="EndingGrid" d:IsHidden="True">
                <Grid x:Name="EndingTitleGrid" Width="878" Height="427" Margin="521,202,521,451">
                    <Image x:Name="EndingTitleBackImage" Source="/Images/ending_bubble.png" Stretch="Uniform"/>
                    <TextBlock x:Name="EndingTitleTextBlock" HorizontalAlignment="Center" Margin="0,214,0,0" VerticalAlignment="Top" FontSize="88" FontWeight="Bold" Foreground="Black" Text="しゅうりょう！" TextAlignment="Center"/>
                    <TextBlock x:Name="EndingChapterNoTextBlock" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" FontSize="88" FontWeight="Bold" Text="第９回" TextAlignment="Center"/>
                </Grid>
                <Image x:Name="EndingItemImage" HorizontalAlignment="Center" Height="340" VerticalAlignment="Top" Width="346" Source="/Images/item09_solo.png" Margin="-100,570,0,0"/>
                <Image x:Name="KimiEndingImage" HorizontalAlignment="Left" Height="470" Margin="1364,10,0,0" VerticalAlignment="Top" Width="436" Source="/Images/kimi_face_02.png"/>
                <Image x:Name="AosukeEndingImage" HorizontalAlignment="Left" Height="470" Margin="120,10,0,0" VerticalAlignment="Top" Width="436" Source="/Images/aosuke_face_01.png" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image x:Name="AkamaruEndingImage" HorizontalAlignment="Left" Height="470" Margin="59,460,0,0" VerticalAlignment="Top" Width="436" Source="/Images/akamaru_face_04.png"/>
            </Grid>
            <Grid x:Name="SelectFeelingGrid" d:IsHidden="True">
                <Grid x:Name="SelectGoodFeelingGrid" HorizontalAlignment="Left" Height="928" Margin="452,72,0,0" VerticalAlignment="Top" Width="400">
                    <Image x:Name="SelectGoodFeelingImage" Source="/Images/good_feeling.png" Stretch="Fill"/>
                    <ListBox x:Name="SelectGoodFeelingListBox" Margin="20,108,20,15" Background="{x:Null}" BorderBrush="{x:Null}" ItemContainerStyle="{StaticResource SelectGoodFeelingStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionMode="Single" SelectionChanged="FeelingListBox_SelectionChanged"/>
                </Grid>
                <Grid x:Name="SelectBadFeelingGrid" HorizontalAlignment="Left" Height="928" VerticalAlignment="Top" Width="400" Margin="923,72,0,0">
                    <Image x:Name="SelectBadFeelingImage" Source="/Images/bad_feeling.png" Stretch="Fill"/>
                    <ListBox x:Name="SelectBadFeelingListBox" Margin="20,108,20,15" Background="{x:Null}" BorderBrush="{x:Null}" ItemContainerStyle="{StaticResource SelectBadFeelingStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionMode="Single"  SelectionChanged="FeelingListBox_SelectionChanged"/>
                </Grid>
                <Image x:Name="SelectItemFeelingImage" HorizontalAlignment="Left" Height="386" Margin="727,0,0,0" VerticalAlignment="Center" Width="273" RenderTransformOrigin="0.659,0.453"/>
            </Grid>

            <Grid x:Name="ViewFeelingGrid" HorizontalAlignment="Center" Width="1920" d:IsHidden="True">
                <Grid x:Name="ViewSizeOfFeelingGrid" Margin="527,31,526,684">
                    <Image x:Name="ViewSizeOfFeelingImage" Source="/Images/feeling_value.png"/>
                    <TextBlock x:Name="ViewSizeOfFeelingTitleTextBlock" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" Text="きもちの 「大きさ」" TextAlignment="Center"/>
                    <TextBlock x:Name="ViewSizeOfFeelingTextBlock" HorizontalAlignment="Left" Margin="174,174,0,0" Text="50" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72" Width="540" TextAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid x:Name="SelectHeartGrid" Margin="400,450,400,100" d:IsHidden="True">
                <Image x:Name="SelectHeartImage" HorizontalAlignment="Center" Source="/Images/heart_blue.png" Margin="10,0,0,0"/>
                <Image x:Name="SelectNeedleImage"  Source="/Images/blue_needle.png" RenderTransformOrigin="0.5,0.87" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,120,10,20">
                    <Image.RenderTransform>
                        <RotateTransform Angle="{Binding Angle, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Chapter9}}}"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
            <Border x:Name="LightGreenBorder" Background="#FFC8FAC8" Opacity="0.8" CornerRadius="60" Margin="100,50,100,150" />
            <Grid x:Name="NotGoodExampleGrid" Margin="130,80,130,180" d:IsHidden="True">
                <Grid x:Name="NotGoodExampleTitleGrid" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <TextBlock x:Name="ForFriendsTitleText" Text="友だちのこと" FontSize="65" FontFamily="Yu Gothic" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="ForAdultTitleText" Text="大人とのこと" FontSize="65" FontFamily="Yu Gothic" FontWeight="Bold" Margin="440,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="ForStudyTitleText" Text="勉強のこと" FontSize="65" FontFamily="Yu Gothic" FontWeight="Bold" Margin="0,306" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="ForTheOthersTitleText" Text="その他のこと" FontSize="65" FontFamily="Yu Gothic" FontWeight="Bold" Margin="440,306" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Grid>
                <Grid x:Name="NotGoodExampleTextGrid" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Border x:Name="ForFriendsBorder" Background="White" BorderBrush="#FFFFC000" BorderThickness="10" CornerRadius="60" Height="250" Width="700" Margin="50,100" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBlock x:Name="ExampleForFriendsText" Text="友だちになかなか&#10;話しかけられない。" Margin="30" FontSize="50" FontFamily="Yu Gothic" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="ForAdultBorder" Background="White" BorderBrush="#FFFFC000" BorderThickness="10" CornerRadius="60" Height="250" Width="700" Margin="80,100" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <TextBlock x:Name="ExampleForAdultText" Text="学校の先生にしつもん&#10;することが苦手だ。" Margin="30" FontSize="50" FontFamily="Yu Gothic" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="ForStudyBorder" Background="White" BorderBrush="#FFFFC000" BorderThickness="10" CornerRadius="60" Height="250" Width="700" Margin="50,60" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <TextBlock x:Name="ExampleForStudyText" Text="みんなの前で発表&#10;することが苦手だ。" Margin="30" FontSize="50" FontFamily="Yu Gothic" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="ForTheOtherBorder" Background="White" BorderBrush="#FFFFC000" BorderThickness="10" CornerRadius="60" Height="250" Width="700" Margin="80,60" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <TextBlock x:Name="ExampleForTheOtherText" Text="動物や虫が&#10;とてもこわい。" Margin="30" FontSize="50" FontFamily="Yu Gothic" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
                <Grid x:Name="NotGoodExampleChildrenImageGrid" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Image x:Name="AosukeImage" Source="Images/aosuke_face_04.png" Height="300" Width="300" Margin="580,80" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Image x:Name="KimiImage" Source="Images/kimi_face_05.png" Height="300" Width="300" Margin="580,30" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    <Image x:Name="AkamaruImage" Source="Images/akamaru_face_02.png" Height="300" Width="300" Margin="10,30" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </Grid>
            </Grid>
            <Grid x:Name="InputChallengeGrid" Margin="130,80,130,180">
                <TextBlock x:Name="InputChallengeTitleText" Text="のちょうせんしてみたいこと（苦手なこと）" FontSize="45" FontFamily="Yu Gothic" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Button x:Name="InputChallengeButton" Style="{StaticResource BubbleFrame}" Margin="100,100" BorderBrush="#FFFFC000" BorderThickness="10" Click="Button_Click">
                    <Grid x:Name="InputChallengeButtonGrid" Margin="30">
                        <Viewbox>
                            <InkCanvas x:Name="InputChallengeCanvas" Style="{StaticResource OutputInkCanvas}"/>
                        </Viewbox>
                        <TextBlock x:Name="InputChallengeText" Style="{StaticResource OutputTextBlock}" FontSize="65"/>
                    </Grid>
                </Button>
            </Grid>
            <Grid x:Name="AkamarusSizeOfFeelingAfterUsedItemGrid" Margin="130,80,130,180" RenderTransformOrigin="0.5,0.5" d:IsHidden="True">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Image x:Name="AkamaruAfterUsedItemImage" Source="Images/akamaru_face_02.png" Height="300" Width="300" Margin="60,10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
