                        <outline_marker:OutlineText x:Name="AosukesFeelingSceneTitle" Style="{StaticResource Orange}" Text="青助くんのきもち" FontSize="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ChallengeTImeTitleText" Style="{StaticResource ShadowText}" Text="チャレンジタイム！" Foreground="#FF9966FF" FontSize="140" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
            <Grid x:Name="MangaGrid" Visibility="Visible" d:IsHidden="True">
