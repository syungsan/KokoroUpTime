<Page x:Class="KokoroUpTime.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KokoroUpTime"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="GamePage">

    <Page.Resources>
        <Storyboard x:Key="Appearance">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CharaRight" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CharaRight" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="698.1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:01.5000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CharaRight" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-12.205">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:01.5000000" Value="-14.646">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CharaRight" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AppearToBoard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Character" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="197.027">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:01.5000000" Value="-7.261">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Character" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="-2.432">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Character" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:01.5000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Character" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LongBubble" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:01.5000000" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LongBubble" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:01.5000000" Value="0.000">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="1.00">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Grid>
        <Grid x:Name="MainGrid" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="BG" Grid.RowSpan="16" Grid.ColumnSpan="19"  Stretch="Fill" Source="/Images/background_01.png" Margin="0,1,0,-1"/>
            <Image x:Name="CharaRight" RenderTransformOrigin="0.5,0.5" Source="/Images/shiroji_01.png" Stretch="Uniform" Grid.ColumnSpan="6" Grid.Column="13" Grid.RowSpan="12" Grid.Row="4" Margin="0,67,101,66">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="BigBubble" Source="/Images/big_bubble.png" Grid.ColumnSpan="18" Grid.RowSpan="8" Grid.Row="8" Margin="101,67,101,0"/>
            <TextBlock x:Name="BigSpeech" Text="TextBlock" TextWrapping="Wrap" FontSize="48" Grid.ColumnSpan="16" Grid.Column="1" Grid.RowSpan="5" Grid.Row="11" Margin="101,26,101,48"/>
            <Button x:Name="NextMessageButton" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="NextMessageButton_Click" Grid.ColumnSpan="3" Grid.Column="14" Grid.Row="13" Grid.RowSpan="3" Margin="80,52,21,12">
                <Image Source="Images/yazirusi.png"/>
            </Button>
            <Button x:Name="BackMessageButton" Margin="74,6,15,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ClipToBounds="True" Click="BackMessageButton_Click" Grid.ColumnSpan="3" Grid.Column="14" Grid.RowSpan="2" Grid.Row="11">
                <Image Source="Images/yazirusi.png" RenderTransformOrigin="0.5,0.5" >
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180.0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Button>
        </Grid>
        <Grid x:Name="BoardGrid">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.RowSpan="16" Grid.ColumnSpan="19" Source="/Images/background_03.png" Stretch="Fill"/>
            <Button x:Name="BordButton" Grid.Column="2" Click="BoardButton_Click" Grid.ColumnSpan="15" Margin="45,58,45,14" Grid.RowSpan="14">
                <Image Source="/Images/blackboard.png" Stretch="Fill"/>
            </Button>
            <TextBlock x:Name="BoardTitle" Text="教室のルール" Foreground="White" FontSize="72" TextAlignment="Left" Grid.ColumnSpan="5" Grid.Column="7" Margin="65,45,65,46" Grid.RowSpan="3" Grid.Row="2"/>
            <TextBlock x:Name="BoardChecK1Msg" Text="１．人のことを わらわない" Foreground="#FFFFE64A" FontSize="64" Grid.ColumnSpan="8" Grid.Column="6" Margin="54,66,0,50" Grid.RowSpan="3" Grid.Row="4"/>
            <TextBlock x:Name="BoardChecK2Msg" Text="２．ふざけない" Foreground="#FFFFE64A" FontSize="64" Grid.ColumnSpan="8" Grid.Column="6" Margin="54,58,10,0" Grid.Row="6" Height="99" VerticalAlignment="Top" Grid.RowSpan="3"/>
            <TextBlock x:Name="BoardChecK3Msg" Text="３．はずかしがらない" Foreground="#FFFFE64A" FontSize="64" Grid.ColumnSpan="8" Grid.Column="6" Margin="54,40,10,52" Grid.RowSpan="3" Grid.Row="8"/>
            <CheckBox x:Name="BoardCheck1Box" FontSize="72" Foreground="#FFFFE64A" BorderBrush="#FFFFE64A" Background="#FF003300" Checked="BoardCheck1Box_Checked" Grid.ColumnSpan="2" Grid.Column="4" Margin="91,42,10,25" Grid.Row="4" Grid.RowSpan="2">
                <CheckBox.RenderTransform>
                    <ScaleTransform ScaleX="8.0" ScaleY="8.0"/>
                </CheckBox.RenderTransform>
            </CheckBox>
            <CheckBox x:Name="BoardCheck2Box" FontSize="72" Foreground="#FFFFE64A" BorderBrush="#FFFFE64A" Background="#FF003300" Checked="BoardCheck2Box_Checked" Grid.ColumnSpan="2" Grid.Column="4" Margin="91,34,10,34" Grid.RowSpan="2" Grid.Row="6">
                <CheckBox.RenderTransform>
                    <ScaleTransform ScaleX="8.0" ScaleY="8.0"/>
                </CheckBox.RenderTransform>
            </CheckBox>
            <CheckBox x:Name="BoardCheck3Box" FontSize="72" Foreground="#FFFFE64A" BorderBrush="#FFFFE64A" Background="#FF003300" Checked="BoardCheck3Box_Checked" Grid.ColumnSpan="2" Grid.Column="4" Margin="91,26,10,41" Grid.RowSpan="2" Grid.Row="8">
                <CheckBox.RenderTransform>
                    <ScaleTransform ScaleX="8.0" ScaleY="8.0"/>
                </CheckBox.RenderTransform>
            </CheckBox>
            <Image x:Name="Character" Margin="0,1,10,0" VerticalAlignment="Top" Source="/Images/shiroji_02.png" RenderTransformOrigin="0.5,0.5" Stretch="Uniform" Grid.RowSpan="8" Grid.ColumnSpan="4" Grid.Column="12" Grid.Row="8">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Button x:Name="LongBubble" Grid.Column="1" Grid.Row="12" Grid.RowSpan="3" Grid.ColumnSpan="17" Margin="101,10,101,34" Background="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Click="LongBubble_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Grid>
                <Image Source="/Images/long_bubble.png"/>
                <TextBlock x:Name="LongSpeech" Text="以上のルールは必ず守るのじゃ！ルールがわかったら□をタップしてくれるかの？" FontSize="42" Margin="48,55,-48,-55"/>
                </Grid>
            </Button>
            
            <Button x:Name="AfterButton" Margin="91,67,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="AfterButton_Click" Grid.RowSpan="4" Grid.ColumnSpan="4" Grid.Column="15" Grid.Row="12">
                <Image Source="Images/after.png"/>
            </Button>
            <Button x:Name="BeforeButton" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.ColumnSpan="4" Grid.Row="13" Margin="21,8,50,19" Grid.RowSpan="3">
                <Image Source="Images/before.png"/>
            </Button>
        </Grid>
    </Grid>
</Page>
